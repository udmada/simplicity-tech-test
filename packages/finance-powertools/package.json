{
  "name": "@udmada/finance-powertools",
  "version": "0.1.11",
  "type": "module",
  "description": "Observability and resilience layers for Effect-based applications (inspired by AWS Lambda Powertools)",
  "keywords": [
    "effect",
    "observability",
    "logging",
    "tracing",
    "metrics",
    "idempotency",
    "powertools",
    "opentelemetry"
  ],
  "author": "udmada <git@adamdu.nz>",
  "license": "MIT",
  "homepage": "https://github.com/udmada/simplicity-tech-test/tree/master/packages/finance-powertools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udmada/simplicity-tech-test.git",
    "directory": "packages/finance-powertools"
  },
  "bugs": {
    "url": "https://github.com/udmada/simplicity-tech-test/issues"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:esm && pnpm run build:cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:types": "vitest run --typecheck.only",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm exec eslint src tests --ext .ts",
    "format": "pnpm exec prettier --write src tests",
    "format:check": "pnpm exec prettier --check src tests"
  },
  "dependencies": {
    "effect": "^3.19.4"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "peerDependencies": {
    "effect": "^3.0.0"
  },
  "optionalDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0"
  }
}
