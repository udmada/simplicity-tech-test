{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "workers/**/*",
    "worker-configuration.d.ts",
    "../../packages/finance-client/src/**/*",
    "../../packages/finance-powertools/src/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@cloudflare/workers-types", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./app/*"],
      "@udmada/finance-client": ["../../packages/finance-client/src/index.ts"],
      "@udmada/finance-client/*": ["../../packages/finance-client/src/*"],
      "@udmada/finance-powertools": ["../../packages/finance-powertools/src/index.ts"],
      "@udmada/finance-powertools/*": ["../../packages/finance-powertools/src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
